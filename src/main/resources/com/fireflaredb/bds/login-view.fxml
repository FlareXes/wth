<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<AnchorPane id="login-page" prefHeight="700.0" prefWidth="1200.0" style="-fx-background-color: #31384B;"
            xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fireflaredb.bds.LoginController">
   <HBox>
      <Region prefHeight="159.0" prefWidth="1000.0"/>
      <Button fx:id="register_btn" onAction="#onRegisterBtnClick" id="register-btn" mnemonicParsing="false" stylesheets="@Vimpier.css"
              text="Sign Up" wrapText="true">
         <font>
            <Font name="JetBrains Mono Bold" size="18.0"/>
         </font>
         <HBox.margin>
            <Insets top="50.0"/>
         </HBox.margin>
      </Button>
   </HBox>
   <TextField fx:id="phone_entry" layoutX="465.0" layoutY="229.0" prefHeight="39.0" prefWidth="271.0" promptText="Mobile No."
              stylesheets="@Vimpier.css">
      <font>
         <Font name="JetBrains Mono Bold" size="20.0"/>
      </font>
   </TextField>
   <PasswordField fx:id="password_entry" layoutX="465.0" layoutY="299.0" prefHeight="39.0" prefWidth="271.0" promptText="Password"
                  stylesheets="@Vimpier.css"/>
   <Button fx:id="login_btn" layoutX="622.0" layoutY="395.0" minHeight="39.0" mnemonicParsing="false"
           onAction="#onLoginBtnClick" prefHeight="39.0" prefWidth="111.0" stylesheets="@Vimpier.css" text="Login"
           wrapText="true">
      <font>
         <Font name="JetBrains Mono Bold" size="18.0"/>
      </font>
   </Button>
   <CheckBox layoutX="465.0" layoutY="401.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="139.0"
             stylesheets="@Vimpier.css" text="Remember Me"/>
   <Label layoutX="519.0" layoutY="644.0" stylesheets="@Vimpier.css" text="Forget your password?"/>
</AnchorPane>
